---
const imagesData = [
  {
    url: "/cat-astrophe-le-site-web/images/image.png",
    title: "Vue d'ensemble de la cuisine",
  },
  {
    url: "/cat-astrophe-le-site-web/images/image_1.png",
    title: "Point de vue différent de la cuisine",
  },
  {
    url: "/cat-astrophe-le-site-web/images/image_2.png",
    title: "Vue d'ensemble de la cuisine",
  },
  {
    url: "/cat-astrophe-le-site-web/images/image_3.png",
    title: "Tablette et petit café",
  },
  {
    url: "/cat-astrophe-le-site-web/images/image_4.png",
    title: "Planche",
  },
  {
    url: "/cat-astrophe-le-site-web/images/image_5.png",
    title: "Point de vue du chat sur la cuisine",
  },
];
---

<section id="gallery" class="section">
  <h2>La galerie !</h2>
  <div class="gallery">
    {
      imagesData.map(({ url, title }) => (
        <a href={url} target="_blank" class="gallery__link">
          <figure class="gallery__thumb">
            <img src={url} alt={title} class="gallery__image" />
            <figcaption class="gallery__caption">{title}</figcaption>
          </figure>
        </a>
      ))
    }
  </div>
</section>

<style>
  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: white;
  }

  .section {
    background-color: var(--color-accent);
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    grid-auto-rows: 380px;
    gap: 2rem;
    padding: 1rem 4rem;
    padding-bottom: 4rem;
    justify-items: center;
  }

  @media (max-width: 1024px) {
    .gallery {
      grid-template-columns: repeat(2, 1fr);
      padding: 1rem 2rem;
    }
  }

  @media (max-width: 768px) {
    .gallery {
      grid-template-columns: 1fr;
      padding: 1rem;
    }
  }

  .gallery__image {
    border-radius: 15px;
  }

  .gallery__caption {
    font-size: 12px;
    padding: 10px;
  }

  .gallery__link {
    display: block;
    position: relative;
    width: 100%; /* S'assurer que le lien occupe toute la largeur de la cellule */
    height: 100%;
    overflow: hidden;
  }

  .gallery__thumb {
    display: block;
    position: relative;
    width: 100%;
    height: 100%;
  }

  .gallery__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
    transition: 0.2s ease-out all;
  }

  .gallery__link:hover .gallery__image {
    transform: scale(1.1);
  }

  .gallery__caption {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 15px;
    font-size: 14px;
    color: white;
    opacity: 0;
    background: linear-gradient(
      0deg,
      var(--color-secondary) 0%,
      rgba(255, 255, 255, 0) 100%
    );
    transition: opacity 0.3s ease;
  }

  .gallery__link:hover .gallery__caption {
    opacity: 1;
  }
</style>
