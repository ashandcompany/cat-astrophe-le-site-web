  {
    name: 'Donovan Viger',
    role: 'Développeur',
    image: '/cat-astrophe-le-site-web/images/donovan.jpg',
    description: "Il a donné vie à notre chat préféré en développant le jeu !",
    keywords: ['Unity', 'C#', "Site Web"]
  },
  {
    name: 'Baptiste Rouzic',
    role: 'Graphiste',
    image: '/cat-astrophe-le-site-web/images/baptiste.jpg',
    description: "L'identité visuelle du jeu, c'est lui ! Il a conçu tout l'univers graphique et ses supports visuels.",
    keywords: ['Graphisme', 'Illustration']
  },
  {
    name: 'Tanguy Poulain',
    role: 'Développeur',
    image: '/cat-astrophe-le-site-web/images/tanguy.jpg',
    description: "Il imagine et développe des mécaniques de jeu immersives ainsi que des éléments narratifs captivants.",
    keywords: ['Unity', 'Game Dev', 'C#']
  },
  {
    name: 'Emma Roizot',
    role: 'Artiste 3D',
    image: '/cat-astrophe-le-site-web/images/emma.jpg',
    description: "Elle a créé tout l'environnement du premier niveau et donné une apparence à Pixel !",
    keywords: ['3D', 'Modélisation',"Site Web"]
  },
  {
    name: 'Camille Guillemard',
    role: 'Chargée de communication',
    image: '/cat-astrophe-le-site-web/images/camille.jpg',
    description: "Elle partage l'aventure du jeu avec la communauté et met en avant notre adorable personnage félin.",
    keywords: ['Community', 'Social Media']
  },
  {
    name: 'Lea Mazurier',
    role: 'Artiste 3D et chargée de communication',
    image: '/cat-astrophe-le-site-web/images/lea.jpg',
    description: "Elle a conçu les décors du deuxième niveau et anime les réseaux avec ses créations.",
    keywords: ['3D', 'Communication']
  }
];
---
<section id="team" class="team section">
  <div class="container">
    <h2>Rencontrez notre Team</h2>
    <div class="team-grid">
      {team.map(member => (
        <div class="team-card">
          <img src={member.image} alt={member.name} />
          <div class="team-info">
            <h3>{member.name}</h3>
            <h4>{member.role}</h4>
            <p>{member.description}</p>
            <div class="keywords">
              {member.keywords.map(keyword => (
                <span class="badge">{keyword}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team {
    background-color: var(--color-pink);
    background-image: url("/public/images/pattern\ pink.png");
  }

  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: white;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .team-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }

  .team-info {
    padding: 1.5rem;
  }

  h3 {
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
  }

  h4 {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  p {
    color: #666;
    line-height: 1.6;
  }

  .keywords {
    margin-top: 1rem;
  }

  .badge {
    display: inline-block;
    background-color: var(--color-secondary);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    margin: 0.25rem;
    font-size: 0.875rem;
    font-weight: 600;
    transition: background-color .2s ease;
  }

  .badge:hover {
    background-color: var(--color-pink);
    color: white;
  }
</style>
