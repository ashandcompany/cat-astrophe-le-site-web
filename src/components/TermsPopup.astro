<style>
    .popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .popup-content {
        z-index: 100;
        background: white;
        padding: 20px;
        border-radius: 10px;
        width: 90%;
        max-width: 600px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .popup-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .close-button {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--color-secondary);
    }

    .pendessous {
        margin-bottom: 0.6rem;
    }

    .hidden {
        display: none;
    }

    .styled-button {
        background-color: var(--color-primary); /* Bleu vif */
        color: var(--color-secondary); /* Texte blanc */
        border: 2px solid var(--color-secondary);
        padding: 10px 20px; /* Espacement interne */
        font-size: 16px; /* Taille de la police */
        border-radius: 30px; /* Coins arrondis */
        cursor: pointer; /* Curseur de clic */
        transition: all 0.3s ease; /* Effet de transition lors du survol */
    }

    .styled-button:hover {
        color: white; /* Texte blanc */
        background-color: var(--color-secondary); /* Couleur de fond au survol */
        transform: scale(1.05); /* Légère augmentation de taille au survol */
    }

    .styled-button:focus {
        outline: none; /* Suppression de la bordure de focus */
        box-shadow: 0 0 10px rgba(255, 170, 0, 0.6); /* Ombre autour du bouton */
    }
</style>

<button onclick="openPopup()" class="styled-button"
